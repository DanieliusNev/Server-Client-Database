<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.views.signUp.SignUpViewController">
    <children>
        <Label layoutX="108.0" layoutY="116.0" text="User name">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Label>
        <Label layoutX="113.0" layoutY="166.0" text="Password">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Label>
        <Label layoutX="230.0" layoutY="45.0" text="Sign up">
            <font>
                <Font name="Arial" size="36.0" />
            </font>
        </Label>
        <TextField fx:id="username" layoutX="213.0" layoutY="111.0" prefHeight="31.0" prefWidth="216.0" />
        <PasswordField fx:id="password" layoutX="213.0" layoutY="161.0" prefHeight="31.0" prefWidth="216.0" />
        <Button fx:id="signup" layoutX="185.0" layoutY="333.0" mnemonicParsing="false" onAction="#onSignUp" text="Sign up" />
        <Button layoutX="358.0" layoutY="408.0" mnemonicParsing="false" style="-fx-background-color: transparent;" text="Log in" underline="true" />
        <Label layoutX="213.0" layoutY="413.0" text="Member already?" />
        <Button layoutX="295.0" layoutY="333.0" mnemonicParsing="false" onAction="#onCancelButton" text="Cancel" />
        <Label layoutX="44.0" layoutY="209.0" text="Re-enter password">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Label>
        <PasswordField fx:id="repeatPassword" layoutX="214.0" layoutY="204.0" prefHeight="31.0" prefWidth="216.0" />
        <Label layoutX="140.0" layoutY="258.0" text="Email">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="email" layoutX="213.0" layoutY="252.0" prefHeight="31.0" prefWidth="216.0" />
        <Label fx:id="error" layoutX="196.0" layoutY="302.0" prefHeight="21.0" prefWidth="242.0" text="Password does not match" textFill="#e41010" visible="false" />
        <Button layoutX="393.0" layoutY="333.0" mnemonicParsing="false" onAction="#onReset" text="Reset" />
    </children>
</AnchorPane>
